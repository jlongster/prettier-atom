{
  "name": "prettier-atom",
  "main": "./lib/prettier.js",
  "version": "0.0.10",
  "description": "Format file contents using prettier",
  "keywords": [
    "javascript",
    "formatter"
  ],
  "activationCommands": [],
  "repository": "https://github.com/jlongster/prettier-atom",
  "license": "MIT",
  "engines": {
    "atom": ">=0.183.0 <2.0.0"
  },
  "dependencies": {
    "find-root": "^0.1.1",
    "prettier": "0.0.9"
  },
  "devDependencies": {
    "eslint": "^3.6.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "eslintConfig": {
    "rules": {
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "no-console": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": "true"
    },
    "env": {
      "node": true
    }
  },
  "configSchema": {
    "formatOnSave": {
      "title": "Format on Save",
      "description": "Format Javascript files when saving",
      "type": "boolean",
      "default": false,
      "order": 1
    },
    "printWidth": {
      "type": "object",
      "title": "Print Width Settings",
      "description": "Code fit settings",
      "properties": {
        "useDefault": {
          "title": "Use Atom Default",
          "type": "boolean",
          "description": "Use Atom default default wrap setting",
          "default": "false",
          "order": 1
        },
        "value": {
          "title": "Print Width",
          "type": "integer",
          "default": 80,
          "order": 2,
          "description": "Fit code within this line limit. Only works if `Use Atom Default` is not checked"
        }
      },
      "order": 2
    },
    "tabWidth": {
      "title": "Tab Width Settings",
      "description": "Tab Width Settings",
      "type": "object",
      "properties": {
        "useDefault": {
          "title": "Use Atom Default",
          "type": "boolean",
          "description": "Use Atom default default tab length setting",
          "default": "false",
          "order": 1
        },
        "value": {
          "title": "Tab Width",
          "type": "integer",
          "default": 2,
          "order": 2,
          "description": "Number of spaces it should use per tab. Only works if `Use Atom Default` is not checked"
        }
      },
      "order": 3
    },
    "singleQuote": {
      "title": "Single Quote",
      "description": "If true, will use single instead of double quotes",
      "type": "boolean",
      "default": false,
      "order": 4
    },
    "trailingComma": {
      "title": "Trailing Comma",
      "description": "Controls the printing of trailing commas wherever possible",
      "type": "boolean",
      "default": false,
      "order": 5
    },
    "bracketSpacing": {
      "title": "Bracket Spacing",
      "description": "Controls the printing of spaces inside array and objects",
      "type": "boolean",
      "default": true,
      "order": 6
    },
    "useFlowParser": {
      "title": "Use Flow Parser",
      "description": "Use the [flow](https://github.com/facebook/flow) parser instead of [babylon](https://github.com/babel/babylon).",
      "type": "boolean",
      "default": false,
      "order": 7
    },
    "formatOnSaveScopes": {
      "title": "Format-on-Save Scopes",
      "description": "List of scopes for which Pretter will automatically format on save. Note: 'Format on Save' must be enabled for this to have effect. Use `Editor: Log Cursor Scope` to determine the scopes for a file.",
      "type": "array",
      "default": [
        "source.js",
        "source.jsx",
        "source.js.jsx",
        "source.babel",
        "source.js-semantic"
      ],
      "items": {
        "type": "string"
      },
      "order": 8
    }
  }
}
